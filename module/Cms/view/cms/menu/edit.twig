{{ form().openTag(form)|raw}}
{{ formRow(form.get('name')) }}
{{ formRow(form.get('parent_id')) }}
{{ formRow(form.get('order_id')) }}
<span id="show-url" class="text-info btn btn-default">連結設定</span>
<div id="url-div" class="well" style="display: none">
    {{ formRow(form.get('url')) }}
    {{ formRow(form.get('target')) }}
</div>
<span id="show-param" class="text-info btn btn-default">更多參數</span>
<div id="param-div" class="well" style="display: none">
    {{ formRow(form.get('max_records')) }}
    {{ formRow(form.get('order_kind')) }}
    {{ formRow(form.get('term')) }}
</div>
{{ formRow(form.get('id')) }}
{{ form().closTag()|raw }}

<script>
    $(function(){
        $("#show-url").click(function(){
            $("#url-div").toggle("slow");
        });
        $("#show-param").click(function(){
            $("#param-div").toggle("slow");
        });
    })
</script>