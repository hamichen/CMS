{% extends 'layout/layout.twig' %}
{% block pageTitle %}
    {{ PageTitle ('個人資料編修', {'icon':'ion-android-contact'}) }}
{% endblock %}
{% block content %}
    <div class="pannel">

        <div class="panel-body">

            <div class="row-row">
                <div class="col-sm-2">
                    {% include 'user/menu.twig' %}
                </div>
                <div class="col-sm-10">
                    <h3>修改密碼</h3>
                    {{ form(form) }}
                    <span class="btn btn-primary" id="submitBtn">更改密碼</span>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
{% block inline %}
    <script type="text/javascript">
        $(function () {
            $("#submitBtn").click(function () {
                $("#changePasswordForm").submit();
            });

        })
    </script>
{% endblock %}
