{% extends 'layout/layout.twig' %}
{% block content %}
<div class="row-row">
    <div class="col-xs-2">

        {% include 'user/menu.twig' %}
    </div>
    <div class="col-xs-10">
		<h2 class="page-header">修改密碼</h2>
		<div class="box-content">
			{{ form(form) }}
            <span class="btn btn-primary" id="submitBtn">更改密碼</span>
		</div>
	</div>
</div>
{% endblock content %}
{% block inline %}
<script type="text/javascript">
    $(function(){
        $("#submitBtn").click(function(){
            $("#changePasswordForm").submit();
        });

    })
</script>
{% endblock %}
