<script src="{{ basePath }}/assets/plugins/jquery.prettyPhoto.js"></script>
<!-- CUSTOM SCRIPTS -->
<script src="{{ basePath }}/assets/js/custom.js"></script>
{% block inline %}{% endblock inline %}
</body>
</html>
